<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"></LinearLayout>

    <Button
            android:id="@+id/btnStartService"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Start Service"
            android:layout_margin="10dp"/>

    <Button
            android:id="@+id/btnStartServiceB"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Start Service B"
            android:layout_margin="10dp"/>

    <Button
            android:id="@+id/btnStopService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Service"
            android:layout_margin="10dp"/>


    <Button
            android:id="@+id/btnStartBoundService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start bound Service"
            android:layout_margin="10dp"/>


    <Button
            android:id="@+id/btnStopBoundService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop bound Service"
            android:layout_margin="10dp"/>

    <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time here"/>


    <EditText
            android:id="@+id/etText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter Something Here"/>

    <Button
            android:id="@+id/btnIntentService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Intent Service"/>
    <TextView android:id="@+id/tvIntentService" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:text="Broadcasted value"/>


    <Button
            android:id="@+id/btnStartForgroundService" android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="start foreground service"/>


    <Button
            android:id="@+id/btnStopForgroundService" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="stop foreground service"/>


</LinearLayout>
</ScrollView>
